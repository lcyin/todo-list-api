{
    "name": "todo-list-api",
    "version": "1.0.0",
    "description": "A todo list API built with Express and TypeScript",
    "main": "dist/app.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/app.js",
        "dev": "nodemon",
        "test": "NODE_ENV=test jest --silent",
        "test:watch": "NODE_ENV=test jest --watch",
        "test:coverage": "NODE_ENV=test jest --coverage",
        "test:verbose": "NODE_ENV=test jest --verbose",
        "logs": "tail -f logs/app-$(date +%Y-%m-%d).log",
        "logs:error": "tail -f logs/exceptions.log",
        "logs:all": "tail -f logs/*.log"
        
    },
    "keywords": [
        "express",
        "typescript",
        "api",
        "todo"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "morgan": "^1.10.0",
        "uuid": "^9.0.0",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0",
        "zod": "^4.1.5"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^30.0.0",
        "@types/morgan": "^1.9.4",
        "@types/node": "^20.4.5",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^9.0.2",
        "@types/winston": "^2.4.4",
        "jest": "^30.1.3",
        "nodemon": "^3.0.1",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.9.2"
    }
}
