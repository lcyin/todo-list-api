{
    "name": "todo-list-api",
    "version": "1.0.0",
    "description": "A todo list API built with Express and TypeScript",
    "main": "dist/app.js",
    "scripts": {
        "build": "tsc",
        "start": "NODE_ENV=production node dist/app.js",
        "dev": "NODE_ENV=development nodemon",
        "test": "NODE_ENV=test jest --silent",
        "test:watch": "NODE_ENV=test jest --watch",
        "test:coverage": "NODE_ENV=test jest --coverage",
        "test:verbose": "NODE_ENV=test JEST_VERBOSE=true jest --verbose",
        "migrate": "NODE_ENV=development ts-node src/scripts/migrate.ts",
        "migrate:test": "NODE_ENV=test ts-node src/scripts/migrate.ts",
        "migrate:prod": "NODE_ENV=production ts-node src/scripts/migrate.ts",
        "migrate:status": "NODE_ENV=development ts-node src/scripts/migrate.ts status",
        "test:db": "NODE_ENV=test ts-node src/test/setup/test-db-connection.ts",
        "openapi:generate": "ts-node src/scripts/generate-openapi.ts",
        "docs:generate": "npm run openapi:generate",
        "logs": "tail -f logs/app-$(date +%Y-%m-%d).log",
        "logs:error": "tail -f logs/exceptions.log",
        "logs:all": "tail -f logs/*.log"
    },
    "keywords": [
        "express",
        "typescript",
        "api",
        "todo"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@asteasolutions/zod-to-openapi": "^8.1.0",
        "bcryptjs": "^3.0.2",
        "cors": "^2.8.5",
        "dotenv": "^17.2.2",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "pg": "^8.16.3",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^9.0.0",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0",
        "zod": "^4.1.5"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/morgan": "^1.9.4",
        "@types/node": "^20.4.5",
        "@types/pg": "^8.15.5",
        "@types/supertest": "^6.0.3",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/uuid": "^9.0.2",
        "@types/winston": "^2.4.4",
        "jest": "^30.1.3",
        "nodemon": "^3.0.1",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.9.2"
    }
}
